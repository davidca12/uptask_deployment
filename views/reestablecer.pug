doctype html
html(lang="en")
    head
        include partial/header
    body.login 
        .contenedor-formulario  

            h1= nombrePagina 
            p Agrega E-mail 

            if locals.mensajes
                .alertas  
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
                                
            form.caja-login(method="POST" action='/reestablecer')
                .campo
                    label(for='email') E-mail: 
                    input(type='text' name='email' placeholder="Tu email" value= email )
                .campo.enviar 
                    input.boton(type='submit' value="Reestablecer password")
                .campo.acciones 
                    a(href='/iniciar-sesion') Login
                
